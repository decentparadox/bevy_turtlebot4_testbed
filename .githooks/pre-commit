#!/bin/sh
# Pre-commit hook for Rust projects
# This script runs the same checks as the CI pipeline

set -e

echo "ğŸš€ Running pre-commit checks..."
echo ""

# Check if cargo is available
if ! command -v cargo &> /dev/null; then
    echo "âŒ Cargo not found. Please install Rust."
    exit 1
fi

# 1. Format check
echo "ğŸ“ Checking code formatting..."
if ! cargo fmt --all -- --check; then
    echo "âŒ Code formatting issues found!"
    echo "ğŸ’¡ Run 'cargo fmt' to fix formatting"
    exit 1
fi
echo "âœ… Code formatting looks good!"
echo ""

# 2. Clippy check
echo "ğŸ” Running Clippy (linter)..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo "âŒ Clippy found issues!"
    echo "ğŸ’¡ Fix the issues above before committing"
    exit 1
fi
echo "âœ… Clippy checks passed!"
echo ""

# 3. Quick check (faster than full test suite)
echo "ğŸ”§ Running cargo check..."
if ! cargo check --all-targets --all-features; then
    echo "âŒ Cargo check failed!"
    echo "ğŸ’¡ Fix compilation errors before committing"
    exit 1
fi
echo "âœ… Cargo check passed!"
echo ""

# 4. Tests (optional - can be slow)
# Uncomment the lines below if you want to run tests on every commit
# echo "ğŸ§ª Running tests..."
# if ! cargo test; then
#     echo "âŒ Tests failed!"
#     echo "ğŸ’¡ Fix failing tests before committing"
#     exit 1
# fi
# echo "âœ… All tests passed!"
# echo ""

echo "ğŸ‰ All pre-commit checks passed! Ready to commit."
echo ""
echo "ğŸ’¡ To run tests manually: cargo test"
echo "ğŸ’¡ To run full CI locally: .githooks/run-ci.sh" 